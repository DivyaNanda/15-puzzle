{
  "compilerOptions": {
    "declaration": true,
    "module": "system",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "outDir": "./js/dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./js/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
